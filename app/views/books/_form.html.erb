<% if flash[:errors] %>
<ul>
    <% flash[:errors].each do |error| %>
        <ol><%= error %><ol>
    <% end %>
</ul>
<% end %>

<%= form_for @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br><br><br>
    <%= f.label :author_id %>
    <%= f.text_field :author_id %>
    <br><br>
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :genre_name %>
  <br/>
  <br/>
  <%= f.fields_for :genres, @book.genres.build do |genres_fields| %>
    <%= genres_fields.label :name, "Genre" %>
    <%= genres_fields.text_field :genre_name %>
    <% end %>
    <%= f.label :img_url %>
    <%= f.text_area :img_url %>
    <br><br>
    <%= f.label :isbn %>
    <%= f.number_field :isbn %>
    <br><br>
    <%= f.submit %>
<% end %>
